---
import ThemeProvider from "./theme-provider";
import MaterialTailwind from '@material-tailwind/react';
const { Button, Typography } = MaterialTailwind;



---
<ThemeProvider>
<section  id="contact" class="pb-20">
  
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl"
    >
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28  flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-[#25328D] rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-[#ED8006] rounded-md rotate-45"
            ></span>
          </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28  flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-[#25328D] rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-[#ED8006] rounded-md rotate-45"
            ></span>
          </div>
      </div>
      <div class="text-center max-w-3xl mx-auto space-y-4">
            <Typography variant="h2">
                Contactez-nous
            </Typography>
            <Typography>
                Faites appel à notre équipe d’experts pour toutes vos réalisations.
                <br/>
                Quel que soit votre projet, notre équipe professionnelle mettra à votre disposition ses compétences et son savoir-faire.
            </Typography>
        </div>
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
      </div>
      <form 
            name="contact"
            class="mx-auto text-center max-w-xl md:max-w-2xl relative mt-5"
            data-netlify="true"
            >
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
              <label for="nom">
                <Typography>
                      Nom et Prenom
                </Typography>
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight  focus:bg-white" id="nom" name="nom" type="text" placeholder="Jane Doe">
            </div>
            <div class="w-full md:w-1/2 px-3">
              <label for="email">
                <Typography>
                  Email
                </Typography>
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required id="email" name="email" type="email" placeholder="johndoe@gmail.com">
            </div>
            </div>
              <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                  <label for="message">
                    <Typography>
                      Message
                    </Typography>
                  </label>
                  <textarea
                        id="message"
                        name="message"
                        class="form-textarea w-full rounded-md  bg-gray-200 text-gray-700 border"
                        rows="7"
                        placeholder="Message"></textarea>
                  </div>
              <div class="mx-auto max-w-md sm:max-w-xl pt-10">
                      <Button color="orange">
                        <span class="text-white relative z-[5]">Envoyer</span>
                      </Button>
                </div>
      </form>
    </div>    
  </ThemeProvider>
</section>
